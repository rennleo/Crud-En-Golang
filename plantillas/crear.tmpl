{{define "crear"}}
{{template "header"}}
<div class="card">
    <div class="card-header">
        Empleados
    </div>
    <div class="card-body">
        <form action="/insertar" method="post">
            <div class="form-group">
              <label for="">Nombre:</label>
              <input type="text"
                class="form-control" required="" name="nombre" id="nombre" aria-describedby="helpId" placeholder="">
              <small id="helpId" class="form-text text-muted">Escribe Tu Nombre</small>
            </div>
            <div class="form-group">
              <label for="">Correo:</label>
              <input type="email" required="" class="form-control" name="email" id="email" aria-describedby="emailHelpId" placeholder="">
              <small id="emailHelpId" class="form-text text-muted">Escribe Tu Email</small>
            </div>
            <div class="form-group">
              <label for="">Documento:</label>
              <input type="text"
                class="form-control" required="" name="documento" id="documento" aria-describedby="helpId" placeholder="">
              <small id="helpId" class="form-text text-muted">Escribe Tu Documento</small>
            </div>
            <div class="form-group">
              <label for="">Telfono:</label>
              <input type="text"
              
                class="form-control" required="" name="telefono" id="telefono" aria-describedby="helpId" placeholder="">
              <small id="helpId" class="form-text text-muted">Escribe Tu Telefono</small>
            </div>
            <button type="submit" class="btn btn-success">Agregar Empleado</button>
            <a name="" id="" class="btn btn-primary" href="/" role="button">Cancelar</a>
            

        </form>
  
    </div>
</div>

{{template "footer"}}
{{end}}